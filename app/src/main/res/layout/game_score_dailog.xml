<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/tab_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/easy_tag"
            android:textColor="@color/black"
            android:background="@drawable/unselected_button"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="EASY"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/medium_tag"
            android:textColor="@color/black"
            android:background="@drawable/unselected_button"
            android:text="MEDIUM"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/hard_tag"
            android:textColor="@color/black"
            android:background="@drawable/unselected_button"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="HARD"
            android:textSize="16sp"
            android:textStyle="bold"
           android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/margin20"
        android:layout_centerHorizontal="true"
        android:id="@+id/score_ly"
        android:layout_below="@+id/tab_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:padding="@dimen/padding10"
            android:id="@+id/total_score_ly"
            android:layout_width="150dp"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:text="Played"
                android:layout_width="100dp"
                android:textColor="@color/brown"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/played_score"
                android:textSize="20sp"
                android:text="20"
                android:textColor="@color/brown"
                android:textStyle="bold"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/padding10"
            android:id="@+id/won_score_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:text="Won"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/won_score"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="20"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/padding10"
            android:id="@+id/losel_score_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/red"
                android:textSize="20sp"
                android:text="Lost"
                android:textStyle="bold"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/lost_score"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="20"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/dismiss_btn"
        android:layout_marginTop="@dimen/margin10"
        android:layout_below="@+id/score_ly"
        android:text="Dismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>