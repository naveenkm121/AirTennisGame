<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context="com.dhisat.naveen.airtennisgame.LaunchActivity">

    <LinearLayout
        android:layout_marginTop="@dimen/margin50"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/air_tennis_title"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/options_ly"
        android:layout_marginTop="@dimen/margin150"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/playBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play"/>
        <ImageView
            android:layout_marginTop="@dimen/margin10"
            android:id="@+id/game_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level"/>
        <ImageView
            android:layout_marginTop="@dimen/margin10"
            android:id="@+id/game_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/score"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/margin20"
        android:layout_marginLeft="@dimen/margin20"
        android:layout_marginRight="@dimen/margin20"
        android:layout_below="@+id/options_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/speaker_on"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/speaker_icon"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/speaker_off"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:src="@drawable/speaker_off"/>

    </LinearLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />


</RelativeLayout>
